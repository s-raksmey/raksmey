{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["feat", "fix", "docs", "style", "refactor", "test", "chore", "revert"]
    ],
    "subject-empty": [2, "never"],
    "subject-full-stop": [2, "never"],
    "subject-case": [2, "sentence-case"],
    "scope-empty": [2, "never"],
    "scope-case": [2, "lower-case"]
  }
}
